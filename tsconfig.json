{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "checkJs": true,
        "declaration": true,
        "declarationMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "importsNotUsedAsValues": "preserve",
        "inlineSourceMap": false,
        "isolatedModules": false,
        "incremental": true,
        "moduleResolution": "Node",
        "removeComments": true,
        "skipLibCheck": true,
        "strict": true,
        "sourceMap": true,
        "outDir": "dist",
        "strictPropertyInitialization": false,

        "module": "ESNext",
        "target": "ESNext",

        "lib": ["DOM", "DOM.Iterable", "ESNext"]
    },

    "include": [
        "scripts",
        "src",
        "tests"
    ],

    "exclude": [
        "**/**/node_modules",
        "**/*/node_modules",
        "**/node_modules",
        "*/node_modules",
        "node_modules"
    ],

    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    },

    "buildOptions": {
        "incremental": true
    }
}
